int reverse(int x) {
    int ret=x,num=0;
    while(ret!=0)
    {
        //记录num改变之前的值
        int tmp=num;
        num=num*10+ret%10;
        //用已经改变的数去逆向推是否等于tmp,不等于则证明已经溢出,返回0
        if((num-ret%10)/10!=tmp)
        //若溢出num所求的余数和ret所求的余数肯定不相等,若不相等返回0
        if(num%10!=ret%10)
            return 0;
        ret/=10;
    }
    return num;
}
